  if not Updating then
  begin
    Updating := true;
    PgVonBisRB.Checked := true;
    if PgVonEdit.CanFocus then PgVonEdit.SetFocus;
    Updating := false;
  end;
end;

//~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
